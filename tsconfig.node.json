{
  "compilerOptions": {
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "jsx" : "react-jsx",
    "esModuleInterop" : true,
    "target": "ES2022",
    "lib": ["DOM", "ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "noUncheckedSideEffectImports": true
    "paths": {
      "@ui/*": ["./src/components/*"],
      "@consts/*": ["./src/consts/*"]
    }
  },
  "include": ["src/components", "src/components/Breadcrumb/Internal/BreadcrumbSeparator.tsx"]
}
